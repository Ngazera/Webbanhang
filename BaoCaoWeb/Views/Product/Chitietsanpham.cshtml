@model BaoCaoWeb.Models.Product


@{
    ViewBag.Title = "Chitietsanpham";
    Layout = "~/Views/Shared/Layout_user.cshtml";
}

@section style{
    <style>
        .wrapper {
            margin-bottom: 100px;
            display: flex;
            height: 450px;
            width: 1000px;
            margin-left: 250px;
            margin-top: -30px;
            border-radius: 7px 7px 7px 7px;
            /* VIA CSS MATIC https://goo.gl/cIbnS */
            -webkit-box-shadow: 0px 14px 32px 0px rgba(0, 0, 0, 0.15);
            -moz-box-shadow: 0px 14px 32px 0px rgba(0, 0, 0, 0.15);
            box-shadow: 0px 14px 32px 0px rgba(0, 0, 0, 0.15);
        }

        .product-info {
            margin-left: 60px;
            margin-top: 50px;
            padding-right:20px
        }

      

        /*.product-img {
            height: 450px;
        }*/

        .add {
            color: white;
            text-decoration: none;
            font-size: 20px;
            font-family: Serif;
        }

        .addcart {
            width: 200px;
            height: 50px;
            text-align: center;
            background-color: #e47084;
            padding-top: 10px;
            margin-top: 30px;
        }
    </style>
}
<div class="wrapper">
    <div class="product-img">
        <img src="@Model.image" height="450" width="327">
    </div>
    <div class="product-info">
        <div class="product-text">
            <div style="font-weight:bold;font-family:Serif;font-size:35px">  @Model.productName </div>
         
            @*<p>Mô tả: @Model.description </p>*@
        </div>
        <div style="font-size:25px;font-family:Serif;">
            <p> <span>Mô tả: @Model.description</span> </p>
        </div>
        <div style="font-size:25px;font-family:Serif;">
            <p> <span>Danh Mục: @Model.Category.catName</span> </p>
        </div>
        <div style="font-family:Serif;font-size:25px">
            <p> <span>Giá Bán: @Model.price</span> VND</p>
        </div>
        <div class="addcart">
            <a class="add" href="@Url.Action("AddToCart", "cart",new { ProductId = Model.productId})"> Thêm Vào Giỏ Hàng </a>
        </div>

    </div>
</div>





